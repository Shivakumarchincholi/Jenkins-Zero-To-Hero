pipeline {
    agent {
        docker {
            image 'shivakumarchincholi/maven-sample-docker-agent:v6'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        SONAR_URL = "http://13.126.40.168:9000"
        DOCKERHUB_CREDS = credentials('docker-cred')
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/shivakumarchincholi/Jenkins-Zero-To-Hero.git'
            }
        }

        stage('Build & Test') {
            steps {
                sh '''
                    cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                    mvn clean package -DskipTests
                '''
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    sh '''
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                        mvn sonar:sonar \
                          -Dsonar.login=$SONAR_AUTH_TOKEN \
                          -Dsonar.host.url=${SONAR_URL}
                    '''
                }
            }
        }

        stage('Build & Push Docker Image') {
            environment {
                DOCKER_IMAGE = "shivakumarchincholi/ultimate-cicd:${BUILD_NUMBER}"
            }
            steps {
                script {
                    sh '''
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                        docker build -t ${DOCKER_IMAGE} .
                    '''
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
                        sh "docker push ${DOCKER_IMAGE}"
                    }
                }
            }
        }

        stage('Update Deployment YAML') {
            environment {
                GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
                GIT_USER_NAME = "Shivakumarchincholi"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    // Perform git checkout inside container for this stage only
                    sh '''
                        # Create a temporary directory inside container
                        TEMP_DIR=$(mktemp -d)
                        cd $TEMP_DIR

                        # Clone repository (shallow clone)
                        git clone --depth 1 https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git .

                        git config user.email "schincholi08@gmail.com"
                        git config user.name "Shivakumar"

                        # Update deployment YAML
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" \
                        java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

                        # Commit and push changes
                        git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                        git commit -m "Update image version ${BUILD_NUMBER}" || echo "Nothing to commit"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                    '''
                }
            }
        }

    }
}
