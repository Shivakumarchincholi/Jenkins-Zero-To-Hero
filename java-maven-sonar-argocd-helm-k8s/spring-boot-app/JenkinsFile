pipeline {
    agent any

    stages {

        stage('Build and Test') {
            agent {
                docker {
                    image 'shivakumarchincholi/maven-sample-docker-agent:v5'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Static Code Analysis') {
            agent {
                docker {
                    image 'shivakumarchincholi/maven-sample-docker-agent:v5'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                sh 'mvn sonar:sonar -Dsonar.projectKey=my-app'
            }
        }

        stage('Build Docker Image') {
            agent {
                docker {
                    image 'shivakumarchincholi/maven-sample-docker-agent:v5'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                sh '''
                    docker build -t shivakumarchincholi/spring-boot-app:${BUILD_NUMBER} .
                    docker push shivakumarchincholi/spring-boot-app:${BUILD_NUMBER}
                '''
            }
        }

        stage('Update Deployment File') {
            agent {
                docker {
                    image 'shivakumarchincholi/maven-sample-docker-agent:v5'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                sh '''
                    sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" \
                      java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                '''
            }
        }

        stage('Deploy to Kubernetes') {
            agent {
                docker {
                    image 'shivakumarchincholi/maven-sample-docker-agent:v5'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                sh '''
                    kubectl apply -f java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                '''
            }
        }
    }
}
